<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

  <div class="container section-padding">
    <!-- Message Area -->
    <%if (messages.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages %>
    </div>
    <% } %>

      <div class="row justify-content-md-center">
          <div class="col-lg-6">
              <h1 class="lead text-center text-heading">Login</h1>
              <form method="POST" autocomplete="off">
                  <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control"
                        id="username"
                        placeholder="Enter username"
                        name="username" required autofocus>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" class="form-control"
                        id="password"
                        placeholder="Enter password"
                        name="password" required>
                  </div>
                  <div class="mb-3">
                      <p class="small-heading">New Here? <span><a href="/signup">Sign Up</a></span></p>
                  </div>
                  <div class="text-center">
                        <!--<button class="btn btn-danger shadow-none custom-button"><strong>Login</strong></button>-->
                        <fieldset class="form-group mb-3 gap-2 d-md-flex justify-content-md-end">
                            <input type="submit" class="btn btn-success" type ="submit" value="Login">
                            <a href="/">
                                <input type="button" class="btn btn-warning" value="Cancel">
                            </a>
                        </fieldset>
                    </div>
                  
              </form>
          </div>
      </div>
  </div>

  <%- include ../partials/bottom_nav.ejs %>

  <%- include ../partials/footer.ejs %>